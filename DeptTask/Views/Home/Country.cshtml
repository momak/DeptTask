@{
    ViewData["Title"] = "Country";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<input type="hidden" id="urlService" value="@ViewBag.serviceApi" />
<input type="hidden" id="urlLocal" value="@ViewBag.loggerApi" />
<div class="panel panel-default">
    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading">Sync</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-8">
                            <form method="post">
                                <button asp-action="StoreCountries" asp-controller="Home" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-refresh"></i>
                                    Store Data Locally
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="panel panel-heading">
                <div id="table">
                    <table id="tblCountry" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Count</th>
                                <th>Cities</th>
                                <th>Locations</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Count</th>
                                <th>Cities</th>
                                <th>Locations</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/PageScripts/Home/Country.js"></script>
}