@{
    ViewData["Title"] = "City";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<input type="hidden" id="urlService" value="@ViewBag.serviceApi" />
<input type="hidden" id="urlLocal" value="@ViewBag.loggerApi" />
<div class="panel panel-default">
    <div class="row">
        <div class="col-sm-3">
            <div class="panel panel-primary">
                <div class="panel-heading">Sync</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-3">
                            <form method="post">
                                <button asp-action="StoreCities" asp-controller="Home" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-refresh"></i>
                                    Store Data Locally
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <panel-main>
                    <div class="panel panel-primary">
                        <div class="panel-heading">Place</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="ddlCountry" class="col-sm-4 control-label">Country</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="ddlCountry"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </panel-main>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary" id="btnShow">
                            <i class="glyphicon glyphicon-refresh"></i>
                            Fetch Data
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Pagination</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="page" class="col-sm-4 control-label">Page</label>
                            <div class="col-sm-8">
                                <input class="form-control" id="page" value="1" placeholder="Page" type="number" min="1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="limit" class="col-sm-4 control-label">Limit</label>
                            <div class="col-sm-8">
                                <input class="form-control" id="limit" value="100" placeholder="Page size" type="number" min="1" max="10000">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <div class="panel panel-heading">
                <div id="table">
                    <table id="tblCity" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>City</th>
                                <th>Country</th>
                                <th>Count</th>
                                <th>Locations</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>City</th>
                                <th>Country</th>
                                <th>Count</th>
                                <th>Locations</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/PageScripts/Home/City.js"></script>
}
