@{
    ViewData["Title"] = "Measurements";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<input type="hidden" id="urlService" value="@ViewBag.serviceApi" />
<input type="hidden" id="urlLocal" value="@ViewBag.loggerApi" />
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Options</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div id="country">
                                    <label>Country</label>
                                    <select id="ddlCountry" class="form-control"></select>
                                </div>
                                <div id="city">
                                    <label>City</label>
                                    <select id="ddlCity" class="form-control"></select>
                                </div>
                                <div id="locations">
                                    <label>Location</label>
                                    <select id="ddlLocations" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Parameters</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div id="parameters" class="col-sm-12">
                                <label>Parameter</label>
                                <select id="ddlParameters" class="form-control" required></select>
                            </div>
                            <div class="col-sm-12">
                                <label>From</label>
                                <input type="date" id="dateStart"
                                       min="2018-01-01" max="2018-12-31" class="form-control" required />
                                <label>To</label>
                                <input type="date" id="dateEnd"
                                       min="2018-01-01" max="2018-12-31" class="form-control" required />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Paging & Sorting</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label>Page</label>
                                <input class="form-control" id="page" value="1" placeholder="Page" type="number" min="1">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label>Limit</label>
                                <input class="form-control" id="limit" value="100" placeholder="Page size" type="number" min="1" max="10000">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label>Order By</label>
                                <select id="ddlOrder" class="form-control">
                                    <option value="date" selected>Date</option>
                                    <option value="parameter">Parameter</option>
                                    <option value="value">Value</option>
                                    <option value="country">Country</option>
                                    <option value="city">City</option>
                                    <option value="location">Location</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label>Direction</label>
                                <select id="ddlDirection" class="form-control">
                                    <option value="desc" selected>Descending</option>
                                    <option value="asc">Ascending</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel col-md-2 col-lg-offset-4">
            <div>
                <input type="submit" value="Get data" id="btnGet" class="form-control btn-primary" />
            </div>
        </div>
        <div class="col-sm-10">
            <div class="panel panel-heading">
                <div id="table">
                    <table id="tblData" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Parameter</th>
                                <th>Country</th>
                                <th>City</th>
                                <th>Location</th>
                                <th>Value</th>
                                <th>Unit</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Parameter</th>
                                <th>Country</th>
                                <th>City</th>
                                <th>Location</th>
                                <th>Value</th>
                                <th>Unit</th>
                                <th>Date</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
@section Scripts
    {
    <script src="~/PageScripts/Home/Index.js"></script>
}
